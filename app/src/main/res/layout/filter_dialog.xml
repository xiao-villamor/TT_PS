<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:text="@string/filter_title"/>


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipSpacingHorizontal="15dp"
        app:chipSpacingVertical="3dp">

        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Filter"
            android:id="@+id/chip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.ActionBar.Subtitle"
            android:text="@string/chip_sports"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Filter"
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.ActionBar.Subtitle"
            android:text="@string/chip_walkingRoute"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Filter"
            android:id="@+id/chip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.ActionBar.Subtitle"
            android:text="@string/chip_touristVisits"/>
        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Filter"
            android:id="@+id/chip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.ActionBar.Subtitle"
            android:text="@string/chip_party"/>
        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Filter"
            android:id="@+id/chip5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.ActionBar.Subtitle"
            android:text="@string/chip_culturalAndArt"/>
        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Filter"
            android:id="@+id/chip6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.ActionBar.Subtitle"
            android:text="@string/chip_shopping"/>
        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Filter"
            android:id="@+id/chip7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.ActionBar.Subtitle"
            android:text="@string/chip_barAndCoffee"/>
        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Filter"
            android:id="@+id/chip8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.ActionBar.Subtitle"
            android:text="@string/chip_conversation"/>

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:text="@string/filter_selectDistance"/>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_slider"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:valueFrom="0"
        android:valueTo="100"
        android:layout_height="wrap_content"
        android:layout_width="320dp"
        app:values="@array/initial_slider_values"
        android:stepSize="10" />

    <Button
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_marginBottom="50dp"
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_saveButton"/>






</LinearLayout>