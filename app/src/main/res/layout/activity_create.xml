<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/actNew_title"
        android:textSize="30sp"
        android:transitionName="logo_text" />

    <TextView
        android:id="@+id/slogan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actNew_subtitle"
        android:textSize="18sp" />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/activity_title"
            style="?attr/textInputOutlinedDenseStyle"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/activity_title">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/activity_description"
            style="?attr/textInputOutlinedDenseStyle"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="@string/activity_description"
            android:paddingTop="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" />
        </com.google.android.material.textfield.TextInputLayout>




         <Button
                android:id="@+id/button_date"
                android:layout_marginTop="30dp"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/actNew_startDate" />

        <TextView
                android:id="@+id/activity_date"
                android:layout_width="260dp"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />



        <Button
            android:id="@+id/activityTag"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/actNew_tag" />

        <Button
            android:id="@+id/newActivityMap"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="180dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="@string/actNew_location" />

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/createActivity"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:text="@string/actNew_button" />

</LinearLayout>
